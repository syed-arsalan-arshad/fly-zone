<%- include('includes/header.ejs') %>
<%- include('includes/navBar.ejs', {path: path}) %>
<div class="container-fluid" style="padding: 0%; overflow-x: hidden;">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-12">
            <%- include('includes/leftSideBar.ejs', {path: sidePath}) %>
        </div>
        <div class="col-lg-9 col-md-8 col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Seller Information</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-dark">
                            <tr>
                                <th>Seller Name: </th><td><%= sellerData.name %></td>
                            </tr>
                            <tr>
                                <th>Shop Name: </th><td><%= sellerData.shopName %></td>
                            </tr>
                            <tr>
                            <th>Email Id: </th><td><%= sellerData.email %></td> 
                            </tr>
                            <tr>
                                <th>Mobile No: </th><td><%= sellerData.mobile %></td>
                            </tr>
                            <tr>
                                <th>Shop Logo</th><td><a href="/admin/download-logo/<%= sellerData.id %>">See Image</a></td>
                            </tr>
                            <tr>
                                <th>Adhaar/PAN: </th><td><a href="/admin/download-docs/<%= sellerData.id %>">See File</a></td>
                            </tr>
                        </table>
                       </div> 
                </div>
            </div>
            <div class="card card-body">
                <div class="row">
                    <% if(sellerData.status == 1){ %>
                        <div class="col-4">
                            <a class="btn btn-primary btn-block" href="/admin/login-as-seller/<%= sellerData.id %>" target="_blank">Login As Seller</a>
                        </div>
                    <% } %>
                    <% if(sellerData.status != 1){ %>
                        <div class="col-4">
                            <form action="/admin/seller-status-change" method="POST">
                                <input type="hidden" name="sellerId" value="<%= sellerData.id %>">
                                <input type="hidden" name="status" value="1">
                                <button class="btn btn-success btn-block" type="submit">Accept</button>
                            </form>
                        </div>
                    <% } %>
                    <% if(sellerData.status != 2){ %>
                        <div class="col-4">
                            <form action="/admin/seller-status-change" method="POST">
                                <input type="hidden" name="sellerId" value="<%= sellerData.id %>">
                                <input type="hidden" name="status" value="2">
                                <button class="btn btn-danger btn-block" type="submit">Reject</button>
                            </form>
                        </div>
                    <% } %>
                    <div class="col-4">
                        <a href="/admin/seller-request" class="btn btn-info btn-block">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('includes/footer.ejs') %>

    