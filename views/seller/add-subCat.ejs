<%- include('includes/header.ejs') %>
<%- include('includes/navBar.ejs', {path: path}) %>
<div class="container-fluid" style="padding: 0%; overflow-x: hidden;">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-12">
            <%- include('includes/leftSideBar.ejs', {path: sidePath}) %>
        </div>
        <div class="col-lg-9 col-md-8 col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h3>Add-Sub-Category</h3>
                </div>
                <div class="card-body">
                    <% if(errorMessage){ %>
                        <div class="error-block">
                            <p>Error: <%= errorMessage %></p>
                        </div>
                    <% } %>
                    <form action="/admin/add-sub-category" method="POST">
                        <div class="form-group">
                            <label for="catId">Category</label>
                            <select name="catId" id="catId" class="form-control">
                                <option disabled">Choose Category</option>
                                <% cat.forEach(c => { %>
                                    <option value="<%= c.id %>"><%= c.cat_name %></option>
                                <% }) %>                                
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="subCat">SubCategory</label>
                            <input type="text" name="subCat" class="form-control" id="subCat">
                        </div>
                        <div class="form-group">
                            <label for="status">Status</label>
                            <select name="status" id="status" class="form-control">
                                <option value="1">Active</option>
                                <option value="0">In-Active</option>
                            </select>
                        </div>
                        <input type="submit" name="btnAddCategory" value="Add" class="btn btn-success">
                    </form>
                </div>
            </div>
        </div>        
    </div>
</div>
<%- include('includes/footer.ejs') %>

    