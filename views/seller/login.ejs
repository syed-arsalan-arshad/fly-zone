<%- include('includes/header.ejs') %>
<%- include('includes/navBar.ejs', {path: path}) %>
<div class="container-fluid" style="padding: 0%; overflow-x: hidden;">
    <div class="row">
        <div class="col-lg-4 offset-lg-4 offset-md-4 col-md-4 offset-sm-3 col-sm-6 mt-2">
            <div class="card">
                <div class="card-header">
                    <h3>Seller Login</h3>
                </div>
                <div class="card-body">
                    <% if(errorMessage){ %>
                        <div class="error-block">
                            <p>Error: <%= errorMessage %></p>
                        </div>
                    <% } %>
                    <form action="/seller/login" method="POST">
                        <div class="form-group">
                            <label for="mobile">Mobile</label>
                            <input type="text" name="mobile" id="mobile" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <input type="submit" name="btnLogin" value="Login" class="btn btn-success btn-block">
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>
<%- include('includes/footer.ejs') %>

    