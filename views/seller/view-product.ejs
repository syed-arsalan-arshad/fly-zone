<%- include('includes/header.ejs') %>
<%- include('includes/navBar.ejs', {path: path}) %>
<div class="container-fluid" style="padding: 0%; overflow-x: hidden;">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-12">
            <%- include('includes/leftSideBar.ejs', {path: sidePath}) %>
        </div>
        <div class="col-lg-9 col-md-8 col-sm-12">
            
            <div class="row">
                <div class="col-12">
                    <% if(prods.length > 0) { %>
                        <div class="table-resonsive">
                            <table class="table table-stripped table-hovered text-center table-bordered">
                                <thead>
                                    <th>S.No</th>
                                    <th>Product Name</th>
                                    <th>Image</th>
                                    <th>Category</th>
                                    <th>Sub-Category</th>
                                    <th>MRP</th>
                                    <th>Sale Price</th>
                                    <th>Off(%)</th>
                                    <th>Action</th>
                                    <th>Action</th>
                                    <th>Action</th>
                                </thead>
                                <tbody>
                                    <% i = 1;
                                    prods.forEach(product => { %> 
                                        <tr>
                                            <td><%= i %></td>
                                            <td><%= product.title %></td>
                                            <td><img src="/<%= product.mainImage %>" alt="" class="img-fluid" style="height: 50px;"></td>
                                            <td><%= product.category.cat_name %></td>
                                            <td><%= product.subCategory.sub_cat_name %></td>
                                            <td><button class="btn btn-danger">&#8377;<%= product.mrp %></button></td>
                                            <td><button class="btn btn-success">&#8377;<%= product.salePrice %></button></td>
                                            <td><button class="btn btn-info"><%= Math.round((product.salePrice/product.mrp)*100) %>%</button></td>
                                            <td><a href="/seller/edit-product/<%= product.id %>">Edit</a></td>
                                            <td><a href="/seller/product-details/<%= product.id %>">View</a></td>
                                            <td><a href="/seller/delete-product/<%= product.id %>">Delete</a></td>
                                        </tr>

                                    <% i++; }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <h3>No Product <a href="/seller/add-product">Click here to add</a></h3>
                    <% } %>

                   
                </div>                
            </div>
        </div>
    </div>
</div>
<%- include('includes/footer.ejs') %>

    