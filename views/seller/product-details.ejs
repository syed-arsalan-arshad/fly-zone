<%- include('includes/header.ejs') %>
<%- include('includes/navBar.ejs', {path: path}) %>
<div class="container-fluid" style="padding: 0%; overflow-x: hidden;">
    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-12">
            <%- include('includes/leftSideBar.ejs', {path: sidePath}) %>
        </div>
        <div class="col-lg-9 col-md-8 col-sm-12">
            <div class="card text-info bg-light mb-3">
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12"><h6>Category: <button class="btn btn-info"><%= product.category.cat_name %></button></h6></div>
                        <div class="col-lg-6 col-md-6 col-12 text-lg-right text-md-right"><h6>Sub-Category: <button class="btn btn-info"><%= product.subCategory.sub_cat_name %></button></h6></div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-12">
                            <h6>Description:</h6>
                        </div>
                        <div class="col-lg-9 col-md-9 col-12">
                            <div class="border p-1">
                                <p><%- product.description %></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12"><h5>Images</h5></div>
                        <div class="col-12">
                            <ul>
                                <li>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 col-12">
                                            <h6>Main Image</h6>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-12">
                                            <div class="">
                                                <a class="btn btn-info" href="/seller/see-image/<%= product.mainImage %>">See</a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 col-12">
                                            <h6>Small Front Image</h6>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-12">
                                            <div class="">
                                                <a class="btn btn-info" href="/seller/see-image/<%= product.smallFront %>">See</a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-4 col-12">
                                            <h6>Small Back Image</h6>
                                        </div>
                                        <div class="col-lg-9 col-md-8 col-12">
                                            <div class="">
                                                <a class="btn btn-info" href="/seller/see-image/<%= product.smallBack %>">See</a>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12"><h6>MRP: <button class="btn btn-info">&#8377; <%= product.mrp %></button></h6></div>
                        <div class="col-lg-6 col-md-6 col-12 text-lg-right text-md-right"><h6>Sale-Price: <button class="btn btn-info">&#8377; <%= product.salePrice %></button></h6></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('includes/footer.ejs') %>

    